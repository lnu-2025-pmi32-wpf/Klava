@page "/"
@inject SessionService Session

<PageTitle>Home - Klava</PageTitle>

<div class="container mt-5">
    <div class="text-center">
        <h1 class="display-4">Welcome to Klava</h1>
        <p class="lead">Student Task Management System</p>
        
        @if (Session.IsAuthenticated)
        {
            <div class="mt-4">
                <h3>Hello, @Session.GetUserDisplayName()!</h3>
                <div class="mt-3">
                    <a href="/teams" class="btn btn-primary btn-lg me-2">
                        <span class="bi bi-people-fill"></span> View My Teams
                    </a>
                </div>
            </div>
        }
        else
        {
            <div class="mt-4">
                <p>Organize your student tasks, manage team projects, and collaborate with classmates.</p>
                <div class="mt-3">
                    <a href="/register" class="btn btn-primary btn-lg me-2">
                        <span class="bi bi-person-plus-fill"></span> Get Started
                    </a>
                    <a href="/login" class="btn btn-outline-primary btn-lg">
                        <span class="bi bi-box-arrow-in-right"></span> Login
                    </a>
                </div>
            </div>
        }
        
        <div class="row mt-5">
            <div class="col-md-4">
                <div class="card">
                    <div class="card-body text-center">
                        <span class="bi bi-people-fill display-4 text-primary"></span>
                        <h5 class="card-title mt-3">Team Management</h5>
                        <p class="card-text">Create and join teams with unique codes. Manage members and assign roles.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card">
                    <div class="card-body text-center">
                        <span class="bi bi-book display-4 text-primary"></span>
                        <h5 class="card-title mt-3">Subject Organization</h5>
                        <p class="card-text">Organize tasks by academic subjects. Track exams and tests separately.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card">
                    <div class="card-body text-center">
                        <span class="bi bi-check2-square display-4 text-primary"></span>
                        <h5 class="card-title mt-3">Task Tracking</h5>
                        <p class="card-text">Create tasks with deadlines. Never miss an assignment or project milestone.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
