@page "/subjects/{SubjectId:int}"
@rendermode InteractiveServer
@inject ISubjectService SubjectService
@inject ISubjectFileService FileService
@inject ISubmissionService SubmissionService
@inject ITaskService TaskService
@inject IMemberService MemberService
@inject SessionService Session
@inject NavigationManager Navigation
@inject IJSRuntime JS

<PageTitle>Subject Details - Klava</PageTitle>

<div class="container mt-4">
    @if (!Session.IsAuthenticated)
    {
        <div class="alert alert-warning">
            <p>Please <a href="/login">log in</a> to view subject.</p>
        </div>
    }
    else if (subject == null)
    {
        <div class="text-center">
            <div class="spinner-border" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>
    }
    else
    {
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h3>@subject.Title</h3>
                <span class="badge @(subject.Status == SubjectStatus.Exam ? "bg-danger" : "bg-info")">
                    @subject.Status
                </span>
            </div>
            <a href="/teams/@subject.TeamId" class="btn btn-secondary">
                <span class="bi bi-arrow-left"></span> Back to Team
            </a>
        </div>

        @if (!string.IsNullOrEmpty(subject.SubjectInfo))
        {
            <div class="alert alert-info">
                @subject.SubjectInfo
            </div>
        }

        <ul class="nav nav-tabs mb-3">
            <li class="nav-item">
                <a class="nav-link @(activeTab == "tasks" ? "active" : "")" 
                   @onclick='() => activeTab = "tasks"' 
                   style="cursor: pointer;">
                    <span class="bi bi-list-task"></span> Tasks
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link @(activeTab == "files" ? "active" : "")" 
                   @onclick='() => activeTab = "files"' 
                   style="cursor: pointer;">
                    <span class="bi bi-file-earmark"></span> Files
                </a>
            </li>
        </ul>

        @if (activeTab == "tasks")
        {
            @if (isHeadman)
            {
                <div class="mb-3">
                    <button class="btn btn-primary" @onclick="ShowCreateTaskDialog">
                        <span class="bi bi-plus-circle"></span> Create Task
                    </button>
                </div>
            }

            @if (!allTasks.Any())
            {
                <div class="alert alert-info">
                    <p>No tasks yet. @(isHeadman ? "Create one to get started!" : "")</p>
                </div>
            }
            else
            {
                <!-- To Do Section -->
                <div class="card mb-4">
                    <div class="card-header bg-warning text-dark">
                        <h4 class="mb-0">
                            <span class="bi bi-clock-history"></span> To Do (@todoTasks.Count)
                        </h4>
                    </div>
                    <div class="card-body">
                        @if (!todoTasks.Any())
                        {
                            <p class="text-muted">All tasks completed! Great job! ðŸŽ‰</p>
                        }
                        else
                        {
                            <div class="row">
                                @foreach (var task in todoTasks)
                                {
                                    <div class="col-md-6 col-lg-4 mb-3">
                                        <div class="card @(task.Deadline.HasValue && task.Deadline.Value < DateTime.UtcNow ? "border-danger" : "border-warning")">
                                            <div class="card-body">
                                                <h5 class="card-title">@task.Name</h5>
                                                @if (!string.IsNullOrEmpty(task.Description))
                                                {
                                                    <p class="card-text">@task.Description</p>
                                                }
                                                @if (task.Deadline.HasValue)
                                                {
                                                    <p class="card-text">
                                                        <strong>Deadline:</strong> 
                                                        <span class="@(task.Deadline.Value < DateTime.UtcNow ? "text-danger fw-bold" : "")">
                                                            @task.Deadline.Value.ToLocalTime().ToString("MMM dd, yyyy HH:mm")
                                                        </span>
                                                    </p>
                                                }
                                                <div class="d-flex gap-2 flex-wrap">
                                                    <button class="btn btn-success btn-sm" @onclick="() => ToggleTaskStatus(task.Id)">
                                                        <span class="bi bi-check-circle"></span> Mark as Done
                                                    </button>
                                                    @if (isHeadman)
                                                    {
                                                        <button class="btn btn-outline-primary btn-sm" @onclick="() => EditTask(task)">
                                                            <span class="bi bi-pencil"></span>
                                                        </button>
                                                        <button class="btn btn-outline-danger btn-sm" @onclick="() => DeleteTask(task.Id)">
                                                            <span class="bi bi-trash"></span>
                                                        </button>
                                                    }
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        }
                    </div>
                </div>

                <!-- Done Section -->
                <div class="card">
                    <div class="card-header bg-success text-white">
                        <h4 class="mb-0">
                            <span class="bi bi-check-circle-fill"></span> Done (@doneTasks.Count)
                        </h4>
                    </div>
                    <div class="card-body">
                        @if (!doneTasks.Any())
                        {
                            <p class="text-muted">No completed tasks yet. Start working on your tasks!</p>
                        }
                        else
                        {
                            <div class="row">
                                @foreach (var task in doneTasks)
                                {
                                    <div class="col-md-6 col-lg-4 mb-3">
                                        <div class="card border-success">
                                            <div class="card-body">
                                                <h5 class="card-title text-decoration-line-through">@task.Name</h5>
                                                @if (!string.IsNullOrEmpty(task.Description))
                                                {
                                                    <p class="card-text text-muted">@task.Description</p>
                                                }
                                                @if (task.Deadline.HasValue)
                                                {
                                                    <p class="card-text">
                                                        <strong>Deadline:</strong> 
                                                        @task.Deadline.Value.ToLocalTime().ToString("MMM dd, yyyy HH:mm")
                                                    </p>
                                                }
                                                @if (task.SubmittedAt.HasValue)
                                                {
                                                    <p class="card-text">
                                                        <small class="text-success">
                                                            <span class="bi bi-check-circle"></span> 
                                                            Completed: @task.SubmittedAt.Value.ToLocalTime().ToString("MMM dd, HH:mm")
                                                        </small>
                                                    </p>
                                                }
                                                <div class="d-flex gap-2 flex-wrap">
                                                    <button class="btn btn-warning btn-sm" @onclick="() => ToggleTaskStatus(task.Id)">
                                                        <span class="bi bi-arrow-counterclockwise"></span> Mark as Undone
                                                    </button>
                                                    @if (isHeadman)
                                                    {
                                                        <button class="btn btn-outline-primary btn-sm" @onclick="() => EditTask(task)">
                                                            <span class="bi bi-pencil"></span>
                                                        </button>
                                                        <button class="btn btn-outline-danger btn-sm" @onclick="() => DeleteTask(task.Id)">
                                                            <span class="bi bi-trash"></span>
                                                        </button>
                                                    }
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        }
                    </div>
                </div>
            }
        }
        else if (activeTab == "files")
        {
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5>Files (@files.Count)</h5>
                    @if (isHeadman)
                    {
                        <label class="btn btn-sm btn-primary">
                            <span class="bi bi-upload"></span> Upload
                            <InputFile OnChange="HandleFileSelected" class="d-none" multiple />
                        </label>
                    }
                </div>
                <div class="card-body">
                    @if (isUploading)
                    {
                        <div class="alert alert-info">
                            <span class="spinner-border spinner-border-sm me-2"></span>
                            Uploading files...
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(fileMessage))
                    {
                        <div class="alert @(fileMessageIsError ? "alert-danger" : "alert-success")">
                            @fileMessage
                        </div>
                    }

                    @if (files.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>File Name</th>
                                        <th>Size</th>
                                        <th>Uploaded</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var file in files)
                                    {
                                        <tr>
                                            <td>
                                                <span class="bi bi-file-earmark"></span>
                                                @file.DisplayName
                                            </td>
                                            <td>@FormatFileSize(file.Size)</td>
                                            <td>@file.UploadedAt.ToLocalTime().ToString("MMM dd, yyyy HH:mm")</td>
                                            <td>
                                                <a href="/api/files/download/@file.Id" 
                                                   class="btn btn-sm btn-outline-primary"
                                                   target="_blank">
                                                    <span class="bi bi-download"></span> Download
                                                </a>
                                                @if (isHeadman)
                                                {
                                                    <button class="btn btn-sm btn-outline-danger ms-2" 
                                                            @onclick="() => DeleteFile(file.Id)">
                                                        <span class="bi bi-trash"></span> Delete
                                                    </button>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <p class="text-muted">No files uploaded yet. @(isHeadman ? "Upload files to share with team members." : "")</p>
                    }
                </div>
            </div>
        }
    }

    @if (showTaskDialog)
    {
        <div class="modal" style="display:block; background: rgba(0,0,0,0.5);">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">@(editingTask == null ? "Create Task" : "Edit Task")</h5>
                        <button type="button" class="btn-close" @onclick="CloseTaskDialog"></button>
                    </div>
                    <div class="modal-body">
                        <div class="mb-3">
                            <label class="form-label">Task Name:</label>
                            <input type="text" @bind="taskModel.Name" class="form-control" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Description (optional):</label>
                            <textarea @bind="taskModel.Description" class="form-control" rows="3"></textarea>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Deadline (optional):</label>
                            <input type="datetime-local" @bind="taskModel.Deadline" class="form-control" />
                        </div>
                        @if (!string.IsNullOrEmpty(taskError))
                        {
                            <div class="alert alert-danger">@taskError</div>
                        }
                    </div>
                    <div class="modal-footer">
                        <button class="btn btn-primary" @onclick="HandleSaveTask">
                            @(editingTask == null ? "Create" : "Save")
                        </button>
                        <button class="btn btn-secondary" @onclick="CloseTaskDialog">Cancel</button>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@code {
    [Parameter]
    public int SubjectId { get; set; }

    private Subject? subject;
    private List<SubjectFile> files = new();
    private List<TaskWithUserStatusDto> allTasks = new();
    private List<TaskWithUserStatusDto> todoTasks = new();
    private List<TaskWithUserStatusDto> doneTasks = new();
    private bool isHeadman = false;
    private string activeTab = "tasks";
    private bool isUploading = false;
    private string? fileMessage;
    private bool fileMessageIsError = false;
    private bool showTaskDialog = false;
    private TaskWithUserStatusDto? editingTask = null;
    private TaskModel taskModel = new();
    private string? taskError;

    protected override async Task OnInitializedAsync()
    {
        await LoadSubject();
        await LoadFiles();
        await LoadTasks();
        await CheckPermissions();
    }

    private async Task LoadSubject()
    {
        subject = await SubjectService.GetSubjectByIdAsync(SubjectId);
    }

    private async Task LoadFiles()
    {
        files = await FileService.GetFilesBySubjectAsync(SubjectId);
    }

    private async Task LoadTasks()
    {
        if (Session.CurrentUser == null || subject == null) return;

        // Get all tasks for the subject's team with user's submission status
        allTasks = await SubmissionService.GetTeamTasksWithStatusAsync(subject.TeamId, Session.CurrentUser.Id);
        allTasks = allTasks.Where(t => t.SubjectId == SubjectId).ToList();

        // Split tasks into To Do and Done
        todoTasks = allTasks
            .Where(t => t.CurrentUserStatus == null || t.CurrentUserStatus == SubmissionStatus.Wait)
            .OrderBy(t => t.Deadline)
            .ToList();
            
        doneTasks = allTasks
            .Where(t => t.CurrentUserStatus == SubmissionStatus.Done)
            .OrderByDescending(t => t.SubmittedAt)
            .ToList();
    }

    private async Task CheckPermissions()
    {
        if (Session.CurrentUser != null && subject != null)
        {
            isHeadman = await MemberService.IsHeadmanAsync(Session.CurrentUser.Id, subject.TeamId);
        }
    }

    private async Task ToggleTaskStatus(int taskId)
    {
        if (Session.CurrentUser == null) return;

        await SubmissionService.ToggleStatusAsync(taskId, Session.CurrentUser.Id);
        await LoadTasks();
    }

    private void ShowCreateTaskDialog()
    {
        if (!isHeadman) return;

        showTaskDialog = true;
        editingTask = null;
        taskModel = new TaskModel();
        taskError = null;
    }

    private void EditTask(TaskWithUserStatusDto task)
    {
        if (!isHeadman) return;

        showTaskDialog = true;
        editingTask = task;
        taskModel = new TaskModel
        {
            Name = task.Name,
            Description = task.Description,
            Deadline = task.Deadline?.ToLocalTime()
        };
        taskError = null;
    }

    private void CloseTaskDialog()
    {
        showTaskDialog = false;
    }

    private async Task HandleSaveTask()
    {
        if (string.IsNullOrWhiteSpace(taskModel.Name))
        {
            taskError = "Task name is required";
            return;
        }

        try
        {
            DateTime? deadline = taskModel.Deadline?.ToUniversalTime();

            if (editingTask == null)
            {
                await TaskService.CreateTaskAsync(SubjectId, taskModel.Name, taskModel.Description, deadline);
            }
            else
            {
                await TaskService.UpdateTaskAsync(editingTask.Id, taskModel.Name, taskModel.Description, deadline);
            }

            await LoadTasks();
            CloseTaskDialog();
        }
        catch (Exception ex)
        {
            taskError = $"Error: {ex.Message}";
        }
    }

    private async Task DeleteTask(int taskId)
    {
        if (!isHeadman) return;

        var confirmed = await JS.InvokeAsync<bool>("confirm", "Are you sure you want to delete this task?");
        if (confirmed)
        {
            await TaskService.DeleteTaskAsync(taskId);
            await LoadTasks();
        }
    }

    private async Task HandleFileSelected(InputFileChangeEventArgs e)
    {
        if (!isHeadman)
        {
            fileMessage = "You don't have permission to upload files.";
            fileMessageIsError = true;
            return;
        }

        isUploading = true;
        fileMessage = null;
        StateHasChanged();

        try
        {
            var maxFileSize = 10 * 1024 * 1024;
            var uploadedCount = 0;

            foreach (var file in e.GetMultipleFiles(10))
            {
                try
                {
                    using var stream = file.OpenReadStream(maxFileSize);
                    using var memoryStream = new MemoryStream();
                    await stream.CopyToAsync(memoryStream);
                    memoryStream.Position = 0;

                    var request = new UploadFileRequest
                    {
                        SubjectId = SubjectId,
                        FileName = file.Name,
                        ContentType = file.ContentType,
                        Size = file.Size,
                        FileStream = memoryStream
                    };

                    var result = await FileService.UploadFileAsync(request);
                    if (result != null)
                    {
                        uploadedCount++;
                    }
                }
                catch (Exception ex)
                {
                    fileMessage = $"Error uploading {file.Name}: {ex.Message}";
                    fileMessageIsError = true;
                }
            }

            if (uploadedCount > 0)
            {
                fileMessage = $"Successfully uploaded {uploadedCount} file(s).";
                fileMessageIsError = false;
                await LoadFiles();
            }
        }
        catch (Exception ex)
        {
            fileMessage = $"Upload failed: {ex.Message}";
            fileMessageIsError = true;
        }
        finally
        {
            isUploading = false;
            StateHasChanged();
        }
    }

    private async Task DeleteFile(int fileId)
    {
        if (!isHeadman)
            return;

        var confirmed = await JS.InvokeAsync<bool>("confirm", "Are you sure you want to delete this file?");
        if (!confirmed)
            return;

        var success = await FileService.DeleteFileAsync(fileId);
        if (success)
        {
            fileMessage = "File deleted successfully.";
            fileMessageIsError = false;
            await LoadFiles();
        }
        else
        {
            fileMessage = "Failed to delete file.";
            fileMessageIsError = true;
        }
    }

    private string FormatFileSize(long bytes)
    {
        string[] sizes = { "B", "KB", "MB", "GB" };
        double len = bytes;
        int order = 0;
        while (len >= 1024 && order < sizes.Length - 1)
        {
            order++;
            len = len / 1024;
        }
        return $"{len:0.##} {sizes[order]}";
    }

    public class TaskModel
    {
        public string Name { get; set; } = string.Empty;
        public string? Description { get; set; }
        public DateTime? Deadline { get; set; }
    }
}
