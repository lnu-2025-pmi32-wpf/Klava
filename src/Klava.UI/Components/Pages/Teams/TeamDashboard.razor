@page "/teams/{TeamId:int}"
@rendermode InteractiveServer
@inject ITeamService TeamService
@inject IMemberService MemberService
@inject ISubjectService SubjectService
@inject SessionService Session
@inject NavigationManager Navigation

<PageTitle>Team Dashboard - Klava</PageTitle>

<div class="container mt-4">
    @if (!Session.IsAuthenticated)
    {
        <div class="alert alert-warning">
            <p>Please <a href="/login">log in</a> to view team.</p>
        </div>
    }
    else if (team == null)
    {
        <div class="text-center">
            <div class="spinner-border" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>
    }
    else
    {
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h3>@team.Name</h3>
                <p class="text-muted">Team Code: <code>@team.Code</code></p>
            </div>
            <a href="/teams" class="btn btn-secondary">
                <span class="bi bi-arrow-left"></span> Back to Teams
            </a>
        </div>

        <div class="row">
            <!-- Team Members -->
            <div class="col-md-6 mb-4">
                <div class="card">
                    <div class="card-header">
                        <h5>Team Members (@members.Count)</h5>
                    </div>
                    <div class="card-body">
                        @if (members.Any())
                        {
                            <ul class="list-group">
                                @foreach (var member in members)
                                {
                                    <li class="list-group-item d-flex justify-content-between align-items-center">
                                        <div>
                                            @member.User.Firstname @member.User.Lastname
                                            @if (member.Role == TeamMemberRole.Headman)
                                            {
                                                <span class="badge bg-warning text-dark ms-2">Headman</span>
                                            }
                                        </div>
                                        @if (isHeadman && member.UserId != Session.CurrentUser!.Id)
                                        {
                                            <div class="btn-group btn-group-sm">
                                                @if (member.Role == TeamMemberRole.Student)
                                                {
                                                    <button class="btn btn-outline-primary" @onclick="() => PromoteMember(member.UserId)">
                                                        Promote
                                                    </button>
                                                }
                                                else
                                                {
                                                    <button class="btn btn-outline-secondary" @onclick="() => DemoteMember(member.UserId)">
                                                        Demote
                                                    </button>
                                                }
                                                <button class="btn btn-outline-danger" @onclick="() => RemoveMember(member.UserId)">
                                                    Remove
                                                </button>
                                            </div>
                                        }
                                    </li>
                                }
                            </ul>
                        }
                        else
                        {
                            <p class="text-muted">No members yet.</p>
                        }
                    </div>
                </div>
            </div>

            <!-- Subjects -->
            <div class="col-md-6 mb-4">
                <div class="card">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5>Subjects (@subjects.Count)</h5>
                        @if (isHeadman)
                        {
                            <button class="btn btn-sm btn-primary" @onclick="ShowCreateSubjectDialog">
                                <span class="bi bi-plus"></span> Add
                            </button>
                        }
                    </div>
                    <div class="card-body">
                        @if (subjects.Any())
                        {
                            <ul class="list-group">
                                @foreach (var subject in subjects)
                                {
                                    <li class="list-group-item">
                                        <div class="d-flex justify-content-between align-items-center">
                                            <div>
                                                <strong>@subject.Title</strong>
                                                <span class="badge @(subject.Status == SubjectStatus.Exam ? "bg-danger" : "bg-info") ms-2">
                                                    @subject.Status
                                                </span>
                                            </div>
                                            <div>
                                                <a href="/subjects/@subject.Id" class="btn btn-sm btn-outline-primary">
                                                    <span class="bi bi-folder"></span> Details
                                                </a>
                                                <a href="/tasks?teamId=@TeamId&subjectId=@subject.Id" class="btn btn-sm btn-outline-secondary ms-1">
                                                    <span class="bi bi-list-task"></span> Tasks
                                                </a>
                                            </div>
                                        </div>
                                        @if (!string.IsNullOrEmpty(subject.SubjectInfo))
                                        {
                                            <small class="text-muted">@subject.SubjectInfo</small>
                                        }
                                    </li>
                                }
                            </ul>
                        }
                        else
                        {
                            <p class="text-muted">No subjects yet. @(isHeadman ? "Create one to get started!" : "")</p>
                        }
                    </div>
                </div>
            </div>
        </div>
    }

    @if (showSubjectDialog)
    {
        <div class="modal" style="display:block; background: rgba(0,0,0,0.5);">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Create Subject</h5>
                        <button type="button" class="btn-close" @onclick="CloseSubjectDialog"></button>
                    </div>
                    <div class="modal-body">
                        <div class="mb-3">
                            <label class="form-label">Title:</label>
                            <input type="text" @bind="subjectModel.Title" class="form-control" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Description (optional):</label>
                            <textarea @bind="subjectModel.Info" class="form-control" rows="3"></textarea>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Type:</label>
                            <select @bind="subjectModel.Status" class="form-select">
                                <option value="@SubjectStatus.Test">Test</option>
                                <option value="@SubjectStatus.Exam">Exam</option>
                            </select>
                        </div>
                        @if (!string.IsNullOrEmpty(subjectError))
                        {
                            <div class="alert alert-danger">@subjectError</div>
                        }
                    </div>
                    <div class="modal-footer">
                        <button class="btn btn-primary" @onclick="HandleCreateSubject">Create</button>
                        <button class="btn btn-secondary" @onclick="CloseSubjectDialog">Cancel</button>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@code {
    [Parameter]
    public int TeamId { get; set; }
    
    private Team? team;
    private List<TeamMember> members = new();
    private List<Subject> subjects = new();
    private bool isHeadman = false;
    private bool showSubjectDialog = false;
    private SubjectModel subjectModel = new();
    private string? subjectError;
    
    protected override async System.Threading.Tasks.Task OnInitializedAsync()
    {
        await LoadTeamData();
    }
    
    private async System.Threading.Tasks.Task LoadTeamData()
    {
        team = await TeamService.GetTeamByIdAsync(TeamId);
        if (team != null)
        {
            members = await MemberService.GetTeamMembersAsync(TeamId);
            subjects = await SubjectService.GetSubjectsByTeamAsync(TeamId);
            
            if (Session.CurrentUser != null)
            {
                isHeadman = await MemberService.IsHeadmanAsync(Session.CurrentUser.Id, TeamId);
            }
        }
    }
    
    private async System.Threading.Tasks.Task PromoteMember(int userId)
    {
        await MemberService.UpdateMemberRoleAsync(TeamId, userId, TeamMemberRole.Headman);
        await LoadTeamData();
    }
    
    private async System.Threading.Tasks.Task DemoteMember(int userId)
    {
        await MemberService.UpdateMemberRoleAsync(TeamId, userId, TeamMemberRole.Student);
        await LoadTeamData();
    }
    
    private async System.Threading.Tasks.Task RemoveMember(int userId)
    {
        await MemberService.RemoveMemberAsync(TeamId, userId);
        await LoadTeamData();
    }
    
    private void ShowCreateSubjectDialog()
    {
        showSubjectDialog = true;
        subjectModel = new();
        subjectError = null;
    }
    
    private void CloseSubjectDialog()
    {
        showSubjectDialog = false;
    }
    
    private async System.Threading.Tasks.Task HandleCreateSubject()
    {
        if (string.IsNullOrWhiteSpace(subjectModel.Title))
        {
            subjectError = "Title is required";
            return;
        }
        
        try
        {
            await SubjectService.CreateSubjectAsync(TeamId, subjectModel.Title, subjectModel.Info, subjectModel.Status);
            await LoadTeamData();
            CloseSubjectDialog();
        }
        catch (Exception ex)
        {
            subjectError = $"Error: {ex.Message}";
        }
    }
    
    public class SubjectModel
    {
        public string Title { get; set; } = string.Empty;
        public string? Info { get; set; }
        public SubjectStatus Status { get; set; } = SubjectStatus.Test;
    }
}
