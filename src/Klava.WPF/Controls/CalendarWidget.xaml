<UserControl x:Class="Klava.WPF.Views.Controls.CalendarWidget"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:converters="clr-namespace:Klava.WPF.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="350" d:DesignWidth="300"
             x:Name="Root">

    <UserControl.Resources>
        <converters:CalendarDayHighlightConverter x:Key="CalendarDayHighlightConverter"/>

        <Style TargetType="CalendarDayButton" x:Key="HighlightCalendarDayStyle">
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="Margin" Value="1"/>

            <Setter Property="Background">
                <Setter.Value>
                    <MultiBinding Converter="{StaticResource CalendarDayHighlightConverter}">
                        <Binding Path="." />
                        <Binding RelativeSource="{RelativeSource Mode=FindAncestor, AncestorType={x:Type Calendar}}" Path="Tag" />
                    </MultiBinding>
                </Setter.Value>
            </Setter>

            <Setter Property="Foreground">
                <Setter.Value>
                    <MultiBinding Converter="{StaticResource CalendarDayHighlightConverter}" ConverterParameter="Foreground">
                        <Binding Path="." />
                        <Binding RelativeSource="{RelativeSource Mode=FindAncestor, AncestorType={x:Type Calendar}}" Path="Tag" />
                    </MultiBinding>
                </Setter.Value>
            </Setter>

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CalendarDayButton">
                        <Grid>
                            <Border x:Name="BackgroundBorder" 
                                    Background="{TemplateBinding Background}" 
                                    Width="32" Height="32"
                                    CornerRadius="16" 
                                    HorizontalAlignment="Center" 
                                    VerticalAlignment="Center"
                                    BorderThickness="0"/>

                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center" 
                                              TextElement.Foreground="{TemplateBinding Foreground}"
                                              Content="{TemplateBinding Content}"/>

                            <Border x:Name="SelectedBorder" 
                                    IsHitTestVisible="False" 
                                    Background="Transparent"
                                    BorderBrush="#2196F3" 
                                    BorderThickness="2" 
                                    CornerRadius="16" 
                                    Width="32" Height="32"
                                    Opacity="0"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="BackgroundBorder" Property="Opacity" Value="0.7"/>
                                <Setter Property="Cursor" Value="Hand"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="SelectedBorder" Property="Opacity" Value="1"/>
                            </Trigger>
                            <Trigger Property="IsInactive" Value="True">
                                <Setter Property="Foreground" Value="#CCCCCC"/>
                                <Setter TargetName="BackgroundBorder" Property="Opacity" Value="0.3"/> 
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <StackPanel>
        <Border Background="White" 
                CornerRadius="12" 
                Padding="10" 
                Margin="0,0,0,20">
            <Border.Effect>
                <DropShadowEffect BlurRadius="15" Color="#DDD" ShadowDepth="2" Opacity="0.6"/>
            </Border.Effect>

            <Calendar x:Name="TasksCalendar"
                      SelectionMode="SingleDate"
                      BorderThickness="0"
                      CalendarDayButtonStyle="{StaticResource HighlightCalendarDayStyle}"
                      Tag="{Binding ElementName=Root, Path=Deadlines}">
            </Calendar>
        </Border>

        <StackPanel Orientation="Horizontal" Margin="10,0,0,0">
            <Ellipse Width="8" Height="8" Fill="#FF5252" Margin="0,0,8,0"/>
            <TextBlock Text="Deadline" Foreground="#757575" FontSize="12" VerticalAlignment="Center"/>

            <Ellipse Width="8" Height="8" Fill="#2196F3" Margin="15,0,8,0"/>
            <TextBlock Text="Today" Foreground="#757575" FontSize="12" VerticalAlignment="Center"/>
        </StackPanel>
    </StackPanel>
</UserControl>