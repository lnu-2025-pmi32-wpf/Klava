<UserControl x:Class="Klava.WPF.Views.LoginView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="clr-namespace:Klava.WPF.Controls"
             Background="{StaticResource BackgroundBrush}">
    
    <controls:AuthLayout Title="Ласкаво просимо" 
                         Subtitle="Увійдіть у ваш акаунт"
                         IsLoading="{Binding IsLoading}">
        
        <StackPanel>
            <controls:LabeledTextBox Label="Ім'я" Text="{Binding Firstname}" />
            <controls:LabeledTextBox Label="Прізвище" Text="{Binding Lastname}" />
            
            <controls:BindablePasswordBox Label="Пароль" Password="{Binding Password}" />

            <Border Background="#FFEBEE" CornerRadius="6" Padding="12" Margin="0,0,0,20"
                    Visibility="{Binding ErrorMessage, Converter={StaticResource NullToVisibilityConverter}}">
                <TextBlock Text="{Binding ErrorMessage}" Foreground="#C62828" TextWrapping="Wrap" FontSize="12"/>
            </Border>

            <Button Content="Увійти" Command="{Binding LoginCommand}"
                    Style="{StaticResource PrimaryButton}" Height="44" Margin="0,0,0,16"
                    IsEnabled="{Binding IsLoading, Converter={StaticResource InverseBoolConverter}}"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Text="Немає акаунту? " Foreground="{StaticResource TextSecondaryBrush}" FontSize="13"/>
                <Button Content="Реєстрація" Command="{Binding NavigateToRegisterCommand}"
                        Style="{StaticResource LinkButton}"/> 
            </StackPanel>
        </StackPanel>
        
    </controls:AuthLayout>
</UserControl>