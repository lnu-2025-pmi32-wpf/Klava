<UserControl x:Class="Klava.WPF.Views.SubjectListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="clr-namespace:Klava.WPF.Converters"
             xmlns:System="clr-namespace:System;assembly=mscorlib"
             xmlns:controls="clr-namespace:Klava.WPF.Controls">
    <UserControl.Resources>
        <converters:NullToVisibilityConverter x:Key="NullToVisibility"/>
        <BooleanToVisibilityConverter x:Key="BoolToVisibility"/>
        <converters:StatusToBrushConverter x:Key="StatusToBrushConverter"/>
        <converters:ZeroToVisibilityConverter x:Key="ZeroToVisibilityConverter"/>
    </UserControl.Resources>
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" 
                   Text="{Binding Team.Name, StringFormat='Subjects - {0}'}" 
                   FontSize="24" 
                   FontWeight="Bold" 
                   Margin="0,0,0,20"/>

        <Border Grid.Row="1" 
                Background="#FFEBEE" 
                Padding="10" 
                Margin="0,0,0,10"
                Visibility="{Binding ErrorMessage, Converter={StaticResource NullToVisibility}}">
            <TextBlock Text="{Binding ErrorMessage}" 
                       Foreground="#D32F2F" 
                       TextWrapping="Wrap"/>
        </Border>

        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    Margin="0,0,0,10"
                    Visibility="{Binding IsHeadman, Converter={StaticResource BoolToVisibility}}">
            <Button Content="Create New Subject" 
                    Command="{Binding ShowCreateSubjectCommand}"
                    Background="#2196F3"
                    Foreground="White"
                    Padding="15,8"
                    FontSize="14"
                    Margin="0,0,10,0"/>
        </StackPanel>

        <ScrollViewer Grid.Row="3" VerticalScrollBarVisibility="Auto">
            <ItemsControl ItemsSource="{Binding Subjects}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Background="White" 
                                BorderBrush="#E0E0E0" 
                                BorderThickness="1" 
                                Padding="15" 
                                Margin="0,0,0,10"
                                CornerRadius="4">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="4" 
                                                  ShadowDepth="2" 
                                                  Opacity="0.2"/>
                            </Border.Effect>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="{Binding Title}" 
                                               FontSize="18" 
                                               FontWeight="Bold" 
                                               Margin="0,0,0,5"/>
                                    <TextBlock Text="{Binding SubjectInfo}" 
                                               TextWrapping="Wrap" 
                                               Margin="0,0,0,5"
                                               Visibility="{Binding SubjectInfo, Converter={StaticResource NullToVisibility}}"/>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Status: " FontWeight="Bold"/>
                                        <Border Background="{Binding Status, Converter={StaticResource StatusToBrushConverter}}" 
                                                Padding="8,3" 
                                                CornerRadius="3">
                                            <TextBlock Text="{Binding Status}" 
                                                       Foreground="White" 
                                                       FontSize="12"/>
                                        </Border>
                                    </StackPanel>
                                </StackPanel>

                                <StackPanel Grid.Column="1" 
                                            Orientation="Vertical" 
                                            VerticalAlignment="Center">
                                    <Button Content="ðŸ“ View Files" 
                                            Command="{Binding DataContext.ViewFilesCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding}"
                                            Background="#2196F3"
                                            Foreground="White"
                                            Padding="10,5"
                                            Margin="0,0,0,5"/>
                                    <Button Content="ðŸ“ View Tasks" 
                                            Command="{Binding DataContext.ViewTasksCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding}"
                                            Background="#4CAF50"
                                            Foreground="White"
                                            Padding="10,5"
                                            Margin="0,0,0,5"/>
                                    <Button Content="ðŸ—‘ Delete" 
                                            Command="{Binding DataContext.DeleteSubjectCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding}"
                                            Background="#F44336"
                                            Foreground="White"
                                            Padding="10,5"
                                            Visibility="{Binding DataContext.IsHeadman, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource BoolToVisibility}}"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <StackPanel Grid.Row="4" 
                    Orientation="Horizontal" 
                    Margin="0,20,0,0">
            <Button Content="Back to Team" 
                    Command="{Binding GoBackCommand}"
                    Background="#757575"
                    Foreground="White"
                    Padding="15,8"
                    FontSize="14"/>
        </StackPanel>

        <Border Grid.RowSpan="5" 
                Background="#80000000" 
                Visibility="{Binding ShowCreateDialog, Converter={StaticResource BoolToVisibility}}"
                MouseDown="Overlay_MouseDown">
            <Border Background="White" 
                    Width="400" 
                    Padding="20" 
                    VerticalAlignment="Center"
                    CornerRadius="8">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="20" ShadowDepth="0" Opacity="0.5"/>
                </Border.Effect>
                <StackPanel>
                    <TextBlock Text="Create New Subject" 
                               FontSize="18" 
                               FontWeight="Bold" 
                               Margin="0,0,0,15"/>

                    <TextBlock Text="Subject Title:" Margin="0,0,0,5"/>
                    <TextBox Text="{Binding NewSubjectTitle, UpdateSourceTrigger=PropertyChanged}" 
                             Padding="8" 
                             Margin="0,0,0,10"/>

                    <TextBlock Text="Subject Info (optional):" Margin="0,0,0,5"/>
                    <TextBox Text="{Binding NewSubjectInfo, UpdateSourceTrigger=PropertyChanged}" 
                             Padding="8" 
                             Height="80" 
                             TextWrapping="Wrap" 
                             AcceptsReturn="True" 
                             Margin="0,0,0,10"/>

                    <TextBlock Text="Status:" Margin="0,0,0,5"/>
                    <ComboBox SelectedItem="{Binding NewSubjectStatus}" 
                              Padding="8" 
                              Margin="0,0,0,20">
                        <ComboBox.ItemsSource>
                            <x:Array Type="{x:Type System:String}">
                                <System:String>Exam</System:String>
                                <System:String>Test</System:String>
                            </x:Array>
                        </ComboBox.ItemsSource>
                    </ComboBox>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="Cancel" 
                                Command="{Binding CancelCreateCommand}"
                                Background="#757575"
                                Foreground="White"
                                Padding="15,8"
                                Margin="0,0,10,0"/>
                        <Button Content="Create" 
                                Command="{Binding CreateSubjectCommand}"
                                Background="#2196F3"
                                Foreground="White"
                                Padding="15,8"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Border>

        <controls:LoadingOverlay Grid.Row="0" Grid.RowSpan="5" IsVisible="{Binding IsLoading}" />
    </Grid>
</UserControl>
