<UserControl x:Class="Klava.WPF.Views.SubjectListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="clr-namespace:Klava.WPF.Converters"
             xmlns:System="clr-namespace:System;assembly=mscorlib"
             MinWidth="760" MinHeight="480"
             Background="{StaticResource BackgroundBrush}">
    <UserControl.Resources>
        <converters:NullToVisibilityConverter x:Key="NullToVisibility"/>
        <BooleanToVisibilityConverter x:Key="BoolToVisibility"/>
        <converters:StatusToBrushConverter x:Key="StatusToBrushConverter"/>
        <converters:ZeroToVisibilityConverter x:Key="ZeroToVisibilityConverter"/>
    </UserControl.Resources>
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" 
                   Text="{Binding Team.Name, StringFormat='Предмети - {{0}}'}" 
                   FontSize="24" 
                   FontWeight="Bold" 
                   Margin="0,0,0,20"/>

        <!-- Error Message -->
        <Border Grid.Row="1" 
                Background="#FFEBEE" 
                Padding="10" 
                Margin="0,0,0,10"
                Visibility="{Binding ErrorMessage, Converter={StaticResource NullToVisibility}}">
            <TextBlock Text="{Binding ErrorMessage}" 
                       Foreground="#D32F2F" 
                       TextWrapping="Wrap"/>
        </Border>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    Margin="0,0,0,20"
                    Visibility="{Binding IsHeadman, Converter={StaticResource BoolToVisibility}}">
            <Button Content="Додати предмет" 
                    Command="{Binding ShowCreateSubjectCommand}"
                    Padding="14,10"
                    Background="{StaticResource PrimaryBrush}"
                    Foreground="White"
                    Style="{StaticResource ModernButton}"/>
        </StackPanel>

        <!-- Subjects List -->
        <ScrollViewer Grid.Row="3" VerticalScrollBarVisibility="Auto">
            <ItemsControl ItemsSource="{Binding Subjects}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Background="{StaticResource SurfaceBrush}" 
                                BorderBrush="{StaticResource BorderBrush}" 
                                BorderThickness="1" 
                                Padding="20" 
                                Margin="0,0,0,12"
                                CornerRadius="8"
                                MinHeight="100">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="10" 
                                                  ShadowDepth="2" 
                                                  Opacity="0.1"
                                                  Color="Black"/>
                            </Border.Effect>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0" VerticalAlignment="Center">
                                    <TextBlock Text="{Binding Title}" 
                                               FontSize="18" 
                                               FontWeight="Bold" 
                                               Margin="0,0,0,8"
                                               Foreground="{StaticResource TextPrimaryBrush}"/>
                                    <TextBlock Text="{Binding SubjectInfo}" 
                                               TextWrapping="Wrap" 
                                               Margin="0,0,0,10"
                                               FontSize="13"
                                               Foreground="{StaticResource TextSecondaryBrush}"
                                               Visibility="{Binding SubjectInfo, Converter={StaticResource NullToVisibility}}"/>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Статус: " FontWeight="SemiBold" FontSize="12" Margin="0,0,8,0"/>
                                        <Border Background="{Binding Status, Converter={StaticResource StatusToBrushConverter}}" 
                                                Padding="10,4" 
                                                CornerRadius="4">
                                            <TextBlock Text="{Binding Status}" 
                                                       Foreground="White" 
                                                       FontSize="11"
                                                       FontWeight="SemiBold"/>
                                        </Border>
                                    </StackPanel>
                                </StackPanel>

                                <StackPanel Grid.Column="1" 
                                            Orientation="Horizontal" 
                                            VerticalAlignment="Center"
                                            Margin="20,0,0,0">
                                    <Button Content="Переглянути файли" 
                                            Command="{Binding DataContext.ViewFilesCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding}"
                                            Padding="12,8"
                                            Background="{StaticResource PrimaryBrush}"
                                            Foreground="White"
                                            Margin="0,0,8,0"
                                            Style="{StaticResource ModernButton}"/>
                                    <Button Content="Переглянути завдання" 
                                            Command="{Binding DataContext.ViewTasksCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding}"
                                            Padding="12,8"
                                            Background="{StaticResource SuccessBrush}"
                                            Foreground="White"
                                            Margin="0,0,8,0"
                                            Style="{StaticResource ModernButton}"/>
                                    <Button Content="Видалити" 
                                            Command="{Binding DataContext.DeleteSubjectCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding}"
                                            Padding="12,8"
                                            Background="#F44336"
                                            Foreground="White"
                                            Visibility="{Binding DataContext.IsHeadman, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource BoolToVisibility}}"
                                            Style="{StaticResource ModernButton}"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- Bottom Buttons -->
        <StackPanel Grid.Row="4" 
                Orientation="Horizontal" 
                Margin="0,20,0,0">
            <Button Content="‹" 
                Command="{Binding GoBackCommand}"
                Background="Transparent"
                Foreground="{StaticResource PrimaryBrush}"
                Padding="6,4"
                FontSize="22"
                FontWeight="Bold"
                BorderThickness="0"
                Cursor="Hand"
                ToolTip="Повернутись до команди"/>
        </StackPanel>

        <!-- Create Subject Dialog Overlay -->
        <Border Grid.RowSpan="5" 
                Background="#80000000" 
                Visibility="{Binding ShowCreateDialog, Converter={StaticResource BoolToVisibility}}"
                MouseDown="Overlay_MouseDown">
                <Border Background="White" 
                    Width="400" 
                    Padding="20" 
                    VerticalAlignment="Center"
                    CornerRadius="8">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="20" ShadowDepth="0" Opacity="0.5"/>
                </Border.Effect>
                <StackPanel>
                    <TextBlock Text="Створити новий предмет" 
                               FontSize="18" 
                               FontWeight="Bold" 
                               Margin="0,0,0,15"/>

                    <TextBlock Text="Назва предмета:" Margin="0,0,0,5"/>
                    <TextBox Text="{Binding NewSubjectTitle, UpdateSourceTrigger=PropertyChanged}" 
                             Padding="8" 
                             Margin="0,0,0,10"/>

                    <TextBlock Text="Інформація про предмет (необов'язково):" Margin="0,0,0,5"/>
                    <TextBox Text="{Binding NewSubjectInfo, UpdateSourceTrigger=PropertyChanged}" 
                             Padding="8" 
                             Height="80" 
                             TextWrapping="Wrap" 
                             AcceptsReturn="True" 
                             Margin="0,0,0,10"/>

                    <TextBlock Text="Статус:" Margin="0,0,0,5"/>
                    <ComboBox SelectedItem="{Binding NewSubjectStatus}" 
                              Padding="8" 
                              Margin="0,0,0,20">
                        <ComboBox.ItemsSource>
                            <x:Array Type="{x:Type System:String}">
                                <System:String>Exam</System:String>
                                <System:String>Test</System:String>
                            </x:Array>
                        </ComboBox.ItemsSource>
                    </ComboBox>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="Скасувати" 
                                Command="{Binding CancelCreateCommand}"
                                Background="#757575"
                                Foreground="White"
                                Padding="15,8"
                                Margin="0,0,10,0"/>
                        <Button Content="Створити" 
                                Command="{Binding CreateSubjectCommand}"
                                Background="#2196F3"
                                Foreground="White"
                                Padding="15,8"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Border>
    </Grid>
</UserControl>
