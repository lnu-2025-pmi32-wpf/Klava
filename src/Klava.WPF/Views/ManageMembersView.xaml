<UserControl x:Class="Klava.WPF.Views.ManageMembersView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="clr-namespace:Klava.WPF.Converters"
             xmlns:controls="clr-namespace:Klava.WPF.Controls">
    <UserControl.Resources>
        <converters:NullToVisibilityConverter x:Key="NullToVisibility"/>
        <BooleanToVisibilityConverter x:Key="BoolToVisibility"/>
        <converters:RoleToVisibilityConverter x:Key="RoleToVisibilityConverter"/>
        <converters:RoleToDemoteVisibilityConverter x:Key="RoleToDemoteVisibilityConverter"/>
    </UserControl.Resources>
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" 
                   Text="Manage Team Members" 
                   FontSize="24" 
                   FontWeight="Bold" 
                   Margin="0,0,0,20"/>

        <Border Grid.Row="1" 
                Background="#FFEBEE" 
                Padding="10" 
                Margin="0,0,0,10"
                Visibility="{Binding ErrorMessage, Converter={StaticResource NullToVisibility}}">
            <TextBlock Text="{Binding ErrorMessage}" 
                       Foreground="#D32F2F" 
                       TextWrapping="Wrap"/>
        </Border>

        <Border Grid.Row="2" 
                BorderBrush="#BDBDBD" 
                BorderThickness="1" 
                Background="White">
            <Grid>
                <controls:LoadingOverlay IsVisible="{Binding IsLoading}" />

                <DataGrid ItemsSource="{Binding Members}"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          SelectionMode="Single"
                          GridLinesVisibility="None"
                          HeadersVisibility="Column"
                          CanUserAddRows="False"
                          CanUserDeleteRows="False"
                          CanUserResizeRows="False"
                          AlternatingRowBackground="#F5F5F5">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="First Name" 
                                            Binding="{Binding User.Firstname}" 
                                            Width="*"/>
                        <DataGridTextColumn Header="Last Name" 
                                            Binding="{Binding User.Lastname}" 
                                            Width="*"/>
                        <DataGridTextColumn Header="Role" 
                                            Binding="{Binding Role}" 
                                            Width="100"/>
                        <DataGridTemplateColumn Header="Actions" Width="300">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <Button Content="Promote to Headman"
                                                Command="{Binding DataContext.PromoteToHeadmanCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding}"
                                                Background="#4CAF50"
                                                Foreground="White"
                                                Padding="10,5"
                                                Margin="0,0,5,0"
                                                Visibility="{Binding Role, Converter={StaticResource RoleToVisibilityConverter}}"/>
                                        
                                        <Button Content="Demote to Student"
                                                Command="{Binding DataContext.DemoteToStudentCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding}"
                                                Background="#FF9800"
                                                Foreground="White"
                                                Padding="10,5"
                                                Margin="0,0,5,0"
                                                Visibility="{Binding Role, Converter={StaticResource RoleToDemoteVisibilityConverter}}"/>
                                        
                                        <Button Content="Remove"
                                                Command="{Binding DataContext.RemoveMemberCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding}"
                                                Background="#F44336"
                                                Foreground="White"
                                                Padding="10,5"/>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>

        <StackPanel Grid.Row="3" 
                    Orientation="Horizontal" 
                    Margin="0,20,0,0">
            <Button Content="Back to Team" 
                    Command="{Binding GoBackCommand}"
                    Background="#757575"
                    Foreground="White"
                    Padding="15,8"
                    FontSize="14"/>
        </StackPanel>
    </Grid>
</UserControl>
