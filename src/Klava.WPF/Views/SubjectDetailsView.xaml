<UserControl x:Class="Klava.WPF.Views.SubjectDetailsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="clr-namespace:Klava.WPF.Converters">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibility"/>
        <converters:NullToVisibilityConverter x:Key="NullToVisibility"/>
        <converters:StatusToBrushConverter x:Key="StatusToBrushConverter"/>
        <converters:ZeroToVisibilityConverter x:Key="ZeroToVisibilityConverter"/>
    </UserControl.Resources>
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <Button Content="â† Back to Subjects" 
                        Command="{Binding GoBackCommand}"
                        Padding="10,8"
                        Background="Transparent"
                        Foreground="#2196F3"
                        BorderBrush="#2196F3"
                        BorderThickness="1"
                        Cursor="Hand"
                        Margin="0,0,20,0"/>
                        
                <TextBlock Text="{Binding Subject.Title}" 
                           FontSize="28" 
                           FontWeight="Bold"
                           VerticalAlignment="Center"/>
                           
                <Border Background="{Binding Subject.Status, Converter={StaticResource StatusToBrushConverter}}"
                        CornerRadius="12"
                        Padding="8,4"
                        Margin="15,0,0,0"
                        VerticalAlignment="Center">
                    <TextBlock Text="{Binding Subject.Status}" 
                               Foreground="White"
                               FontSize="12"
                               FontWeight="Bold"/>
                </Border>
            </StackPanel>

            <TextBlock Text="{Binding Subject.SubjectInfo}" 
                       FontSize="14"
                       Foreground="#666"
                       TextWrapping="Wrap"
                       Visibility="{Binding Subject.SubjectInfo, Converter={StaticResource NullToVisibility}}"/>

            <TextBlock Text="{Binding StatusMessage}" 
                       FontSize="14"
                       Foreground="#4CAF50"
                       Margin="0,10,0,0"
                       Visibility="{Binding StatusMessage, Converter={StaticResource NullToVisibility}}"/>
        </StackPanel>

        <!-- Files Section -->
        <Border Grid.Row="1" 
                Background="White"
                BorderBrush="#e0e0e0"
                BorderThickness="1"
                CornerRadius="4"
                Padding="20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Files Header -->
                <Grid Grid.Row="0" Margin="0,0,0,20">
                    <TextBlock Text="{Binding Files.Count, StringFormat='Files ({0})'}" 
                               FontSize="20"
                               FontWeight="Bold"
                               VerticalAlignment="Center"/>
                               
                    <Button Content="ðŸ“¤ Upload Files" 
                            Command="{Binding UploadFileCommand}"
                            Padding="15,10"
                            Background="#4CAF50"
                            Foreground="White"
                            BorderThickness="0"
                            FontSize="14"
                            HorizontalAlignment="Right"
                            Cursor="Hand"
                            Visibility="{Binding IsHeadman, Converter={StaticResource BoolToVisibility}}"/>
                </Grid>

                <!-- Files List -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <ItemsControl ItemsSource="{Binding Files}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#f9f9f9"
                                        BorderBrush="#e0e0e0"
                                        BorderThickness="1"
                                        CornerRadius="4"
                                        Padding="15"
                                        Margin="0,0,0,10">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="0">
                                            <TextBlock Text="{Binding DisplayName}" 
                                                       FontSize="16"
                                                       FontWeight="SemiBold"
                                                       Margin="0,0,0,5"/>
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="ðŸ“ Size: " 
                                                           FontSize="12"
                                                           Foreground="#666"/>
                                                <TextBlock FontSize="12"
                                                           Foreground="#666">
                                                    <Run Text="{Binding Size, Mode=OneWay}"/>
                                                    <Run Text=" bytes"/>
                                                </TextBlock>
                                                <TextBlock Text=" | " 
                                                           FontSize="12"
                                                           Foreground="#666"
                                                           Margin="5,0"/>
                                                <TextBlock Text="ðŸ“… Uploaded: " 
                                                           FontSize="12"
                                                           Foreground="#666"/>
                                                <TextBlock Text="{Binding UploadedAt, StringFormat='MMM dd, yyyy HH:mm'}" 
                                                           FontSize="12"
                                                           Foreground="#666"/>
                                            </StackPanel>
                                        </StackPanel>

                                        <StackPanel Grid.Column="1" 
                                                    Orientation="Horizontal"
                                                    VerticalAlignment="Center">
                                            <Button Content="â¬‡ Download" 
                                                    Command="{Binding DataContext.DownloadFileCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    CommandParameter="{Binding}"
                                                    Padding="10,6"
                                                    Background="#2196F3"
                                                    Foreground="White"
                                                    BorderThickness="0"
                                                    Margin="0,0,10,0"
                                                    Cursor="Hand"/>
                                            
                                            <Button Content="ðŸ—‘ Delete" 
                                                    Command="{Binding DataContext.DeleteFileCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    CommandParameter="{Binding}"
                                                    Padding="10,6"
                                                    Background="#F44336"
                                                    Foreground="White"
                                                    BorderThickness="0"
                                                    Cursor="Hand"
                                                    Visibility="{Binding DataContext.IsHeadman, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource BoolToVisibility}}"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>

                <!-- Empty State -->
                <Border Grid.Row="1" 
                        Background="#f9f9f9"
                        BorderBrush="#e0e0e0"
                        BorderThickness="1"
                        CornerRadius="4"
                        Padding="40"
                        Visibility="{Binding Files.Count, Converter={StaticResource ZeroToVisibilityConverter}}">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock Text="ðŸ“‚" 
                                   FontSize="48"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,10"/>
                        <TextBlock Text="No files uploaded yet" 
                                   FontSize="18"
                                   Foreground="#666"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="Upload files to share with team members" 
                                   FontSize="14"
                                   Foreground="#999"
                                   HorizontalAlignment="Center"
                                   Margin="0,5,0,0"
                                   Visibility="{Binding IsHeadman, Converter={StaticResource BoolToVisibility}}"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <!-- Loading Overlay -->
        <Border Grid.RowSpan="2" 
                Background="#80FFFFFF"
                Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibility}}">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="â³" 
                           FontSize="48"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,10"/>
                <TextBlock Text="Loading..." 
                           FontSize="18"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
