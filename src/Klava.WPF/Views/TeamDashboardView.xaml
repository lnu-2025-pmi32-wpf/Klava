<UserControl x:Class="Klava.WPF.Views.TeamDashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Klava.WPF.Views"
             xmlns:controls="clr-namespace:Klava.WPF.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,20">
            <Button Content="â† Back to Teams" 
                    Command="{Binding BackToTeamListCommand}"
                    Padding="10,8"
                    Background="Transparent"
                    Foreground="#2196F3"
                    BorderBrush="#2196F3"
                    BorderThickness="1"
                    Cursor="Hand"
                    Margin="0,0,20,0"/>
            <TextBlock Text="{Binding Team.Name}" 
                       FontSize="28" 
                       FontWeight="Bold"
                       VerticalAlignment="Center"/>
        </StackPanel>

        <Border Grid.Row="1" 
                Background="#e3f2fd"
                BorderBrush="#2196F3"
                BorderThickness="1"
                CornerRadius="4"
                Padding="20"
                Margin="0,0,0,20">
            <StackPanel>
                <TextBlock Text="Team Code:" 
                           FontSize="14"
                           FontWeight="Bold"
                           Margin="0,0,0,10"/>
                <TextBlock Text="{Binding Team.Code}" 
                           FontSize="24"
                           FontFamily="Consolas"
                           FontWeight="Bold"
                           Foreground="#2196F3"/>
                <TextBlock Text="Share this code with others to let them join your team" 
                           FontSize="12"
                           Foreground="#666"
                           Margin="0,10,0,0"/>
            </StackPanel>
        </Border>

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" 
                    Background="White"
                    BorderBrush="#e0e0e0"
                    BorderThickness="1"
                    CornerRadius="4"
                    Padding="20">
                <StackPanel>
                    <TextBlock Text="Quick Actions" 
                               FontSize="20"
                               FontWeight="Bold"
                               Margin="0,0,0,20"/>

                    <Button Content="View Subjects" 
                            Command="{Binding ViewSubjectsCommand}"
                            Padding="15,12"
                            Background="#2196F3"
                            Foreground="White"
                            BorderThickness="0"
                            FontSize="14"
                            Margin="0,0,0,10"
                            HorizontalAlignment="Stretch"
                            Cursor="Hand"/>

                    <Button Content="View All Tasks" 
                            Command="{Binding ViewTasksCommand}"
                            Padding="15,12"
                            Background="#2196F3"
                            Foreground="White"
                            BorderThickness="0"
                            FontSize="14"
                            Margin="0,0,0,15"
                            HorizontalAlignment="Stretch"
                            Cursor="Hand"/>

                    <Button Content="Manage Members" 
                            Command="{Binding ManageMembersCommand}"
                            Padding="15,12"
                            Background="#4CAF50"
                            Foreground="White"
                            BorderThickness="0"
                            FontSize="14"
                            HorizontalAlignment="Stretch"
                            Cursor="Hand"
                            Visibility="{Binding IsHeadman, Converter={StaticResource BoolToVisibilityConverter}}"/>
                    
                    <TextBlock Text="(Headman only)" 
                               FontSize="12"
                               Foreground="#666"
                               Margin="0,10,0,0"
                               Visibility="{Binding IsHeadman, Converter={StaticResource BoolToVisibilityConverter}}"/>
                </StackPanel>
            </Border>

            <Border Grid.Column="2" 
                    Background="White"
                    BorderBrush="#e0e0e0"
                    BorderThickness="1"
                    CornerRadius="4"
                    Padding="20">
                <DockPanel>
                    <TextBlock Text="{Binding Members.Count, StringFormat='Members ({0})'}" 
                               FontSize="20"
                               FontWeight="Bold"
                               DockPanel.Dock="Top"
                               Margin="0,0,0,20"/>

                    <ListView ItemsSource="{Binding Members}"
                              BorderThickness="0">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" Margin="0,5">
                                    <TextBlock Text="{Binding User.Firstname}" 
                                               FontSize="14"
                                               Margin="0,0,5,0"/>
                                    <TextBlock Text="{Binding User.Lastname}" 
                                               FontSize="14"
                                               Margin="0,0,10,0"/>
                                    <TextBlock Text="{Binding Role}" 
                                               FontSize="12"
                                               Foreground="#2196F3"
                                               FontWeight="Bold"
                                               VerticalAlignment="Center"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </DockPanel>
            </Border>
        </Grid>

        <controls:LoadingOverlay Grid.Row="0" Grid.RowSpan="3" IsVisible="{Binding IsLoading}" />
    </Grid>
</UserControl>
