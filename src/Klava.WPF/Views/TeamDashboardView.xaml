<UserControl x:Class="Klava.WPF.Views.TeamDashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Klava.WPF.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" MinWidth="760" MinHeight="480">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,20">
                <Button Content="‹" 
                    Command="{Binding BackToTeamListCommand}"
                    Padding="6,4"
                    Style="{StaticResource GhostButton}"
                    Foreground="{StaticResource PrimaryBrush}"
                    Margin="0,0,16,0"
                    FontSize="22"
                    FontWeight="Bold"
                    ToolTip="Повернутись до команд"/>
            <TextBlock Text="{Binding Team.Name, FallbackValue='Завантаження команди...'}" 
                       FontSize="28" 
                       FontWeight="Bold"
                       VerticalAlignment="Center"/>
        </StackPanel>

        <!-- Team Code Card -->
        <Border Grid.Row="1" 
                Background="#e3f2fd"
                BorderBrush="#2196F3"
                BorderThickness="1"
                CornerRadius="4"
                Padding="20"
                Margin="0,0,0,20">
            <StackPanel>
                <TextBlock Text="Код команди:" 
                           FontSize="14"
                           FontWeight="Bold"
                           Margin="0,0,0,10"/>
                <TextBlock Text="{Binding Team.Code, FallbackValue='N/A'}" 
                           FontSize="24"
                           FontFamily="Consolas"
                           FontWeight="Bold"
                           Foreground="{StaticResource PrimaryBrush}"/>
                <TextBlock Text="Поділитися цим кодом з іншими, щоб вони приєдналися до вашої команди" 
                           FontSize="12"
                           Foreground="#666"
                           Margin="0,10,0,0"/>
            </StackPanel>
        </Border>

        <!-- Content Area -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Quick Actions Card -->
            <Border Grid.Column="0" 
                    Background="White"
                    BorderBrush="#e0e0e0"
                    BorderThickness="1"
                    CornerRadius="4"
                    Padding="20">
                <StackPanel>
                    <TextBlock Text="Швидкі дії" 
                               FontSize="20"
                               FontWeight="Bold"
                               Margin="0,0,0,20"/>

                    <Button Content="Переглянути предмети" 
                            Command="{Binding ViewSubjectsCommand}"
                            Padding="12,10"
                            Background="{StaticResource PrimaryBrush}"
                            Foreground="White"
                            BorderThickness="0"
                            FontSize="14"
                            Margin="0,0,0,10"
                            HorizontalAlignment="Stretch"/>

                    <Button Content="Переглянути всі завдання" 
                            Command="{Binding ViewTasksCommand}"
                            Padding="12,10"
                            Background="{StaticResource PrimaryBrush}"
                            Foreground="White"
                            BorderThickness="0"
                            FontSize="14"
                            Margin="0,0,0,15"
                            HorizontalAlignment="Stretch"/>

                    <Button Content="Керувати учасниками" 
                            Command="{Binding ManageMembersCommand}"
                            Padding="12,10"
                            Background="{StaticResource SuccessBrush}"
                            Foreground="White"
                            BorderThickness="0"
                            FontSize="14"
                            HorizontalAlignment="Stretch"
                            Visibility="{Binding IsHeadman, Converter={StaticResource BoolToVisibilityConverter}}"/>
                    
                    <TextBlock Text="(Тільки для керівника команди)" 
                               FontSize="12"
                               Foreground="#666"
                               Margin="0,10,0,0"
                               Visibility="{Binding IsHeadman, Converter={StaticResource BoolToVisibilityConverter}}"/>
                </StackPanel>
            </Border>

            <!-- Members Card -->
            <Border Grid.Column="2" 
                    Background="White"
                    BorderBrush="#e0e0e0"
                    BorderThickness="1"
                    CornerRadius="4"
                    Padding="20">
                <DockPanel>
                    <TextBlock Text="{Binding Members.Count, StringFormat='Учасники ({{0}})'}" 
                               FontSize="20"
                               FontWeight="Bold"
                               DockPanel.Dock="Top"
                               Margin="0,0,0,20"/>

                    <ListView ItemsSource="{Binding Members}"
                              BorderThickness="0">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" Margin="0,5">
                                    <TextBlock Text="{Binding User.Firstname}" 
                                               FontSize="14"
                                               Margin="0,0,5,0"/>
                                    <TextBlock Text="{Binding User.Lastname}" 
                                               FontSize="14"
                                               Margin="0,0,10,0"/>
                                    <TextBlock Text="{Binding Role}" 
                                               FontSize="12"
                                               Foreground="#2196F3"
                                               FontWeight="Bold"
                                               VerticalAlignment="Center"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </DockPanel>
            </Border>
        </Grid>

        <!-- Loading Overlay -->
        <Border Grid.RowSpan="3" 
                Background="#80FFFFFF"
                Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}">
            <TextBlock Text="Loading team data..." 
                       FontSize="18"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>
        </Border>
    </Grid>
</UserControl>
