<UserControl x:Class="Klava.WPF.Views.CreateTeamView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Klava.WPF.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Border MaxWidth="500" 
                VerticalAlignment="Center"
                Background="White"
                BorderBrush="#e0e0e0"
                BorderThickness="1"
                CornerRadius="8"
                Padding="40">
            <Border.Effect>
                <DropShadowEffect BlurRadius="10" 
                                  ShadowDepth="2" 
                                  Opacity="0.2" 
                                  Color="Black"/>
            </Border.Effect>
            
            <StackPanel>
                <TextBlock Text="Create New Team" 
                           FontSize="28" 
                           FontWeight="Bold" 
                           Margin="0,0,0,30"
                           HorizontalAlignment="Center"/>

                <TextBlock Text="Team Name:" 
                           FontSize="14"
                           Margin="0,0,0,10"/>
                <TextBox Text="{Binding TeamName, UpdateSourceTrigger=PropertyChanged}" 
                         Padding="12"
                         FontSize="16"
                         MaxLength="50"
                         Margin="0,0,0,10"/>
                
                <TextBlock Text="Maximum 50 characters" 
                           FontSize="12" 
                           Foreground="#666"
                           Margin="0,0,0,20"/>

                <TextBlock Text="{Binding ErrorMessage}" 
                           Foreground="Red" 
                           TextWrapping="Wrap"
                           Margin="0,0,0,20"
                           Visibility="{Binding ErrorMessage, Converter={StaticResource NullToVisibilityConverter}}"/>

                <StackPanel Orientation="Horizontal" 
                            HorizontalAlignment="Center">
                    <Button Content="Cancel" 
                            Command="{Binding CancelCommand}"
                            Padding="25,12"
                            Background="#cccccc"
                            Foreground="#333"
                            BorderThickness="0"
                            Margin="0,0,15,0"
                            FontSize="14"
                            Cursor="Hand"/>
                    <Button Content="Create Team" 
                            Command="{Binding CreateTeamCommand}"
                            Padding="25,12"
                            Background="#2196F3"
                            Foreground="White"
                            BorderThickness="0"
                            FontSize="14"
                            FontWeight="Bold"
                            Cursor="Hand"
                            IsEnabled="{Binding IsLoading, Converter={StaticResource InverseBoolConverter}}"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
