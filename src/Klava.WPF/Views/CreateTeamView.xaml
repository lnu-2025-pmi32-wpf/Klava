<UserControl x:Class="Klava.WPF.Views.CreateTeamView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Klava.WPF.Views"
             xmlns:controls="clr-namespace:Klava.WPF.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="900"
             MinWidth="520" MinHeight="420"
             Background="{StaticResource BackgroundBrush}">
    <Grid>
        <controls:LoadingOverlay IsVisible="{Binding IsLoading}" />

        <Border MaxWidth="450" 
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                Background="{StaticResource SurfaceBrush}"
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="1"
                CornerRadius="12"
                Padding="40">
            <Border.Effect>
                <DropShadowEffect BlurRadius="15" 
                                  ShadowDepth="3" 
                                  Opacity="0.15" 
                                  Color="Black"/>
            </Border.Effect>
            
            <StackPanel>
                <!-- Header -->
                <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Margin="0,0,0,20">
                    <TextBlock Text="Створити нову команду" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               Foreground="{StaticResource TextPrimaryBrush}"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="Приєднатися до команди" 
                               FontSize="13" 
                               Foreground="{StaticResource TextSecondaryBrush}"
                               HorizontalAlignment="Center"
                               Margin="0,6,0,0"/>
                </StackPanel>

                <!-- Team Name -->
                <TextBlock Text="Назва команди" 
                           FontSize="12"
                           FontWeight="SemiBold"
                           Margin="0,0,0,8"
                           Foreground="{StaticResource TextPrimaryBrush}"/>
                <TextBox Text="{Binding TeamName, UpdateSourceTrigger=PropertyChanged}" 
                         Style="{StaticResource ModernTextBox}"
                         MaxLength="50"
                         Margin="0,0,0,4"
                         Foreground="{StaticResource TextPrimaryBrush}"/>
                
                <TextBlock Text="Максимум 50 символів" 
                           FontSize="11" 
                           Foreground="{StaticResource TextSecondaryBrush}"
                           Margin="0,0,0,20"/>

                <!-- Error Message -->
                <Border Background="#FFEBEE" 
                        CornerRadius="6"
                        Padding="12"
                        Margin="0,0,0,20"
                        Visibility="{Binding ErrorMessage, Converter={StaticResource NullToVisibilityConverter}}">
                    <TextBlock Text="{Binding ErrorMessage}" 
                               Foreground="#C62828" 
                               TextWrapping="Wrap"
                               FontSize="12"/>
                </Border>

                <!-- Buttons -->
                <StackPanel Orientation="Horizontal" 
                            HorizontalAlignment="Right">
                    <Button Content="Скасувати" 
                            Command="{Binding CancelCommand}"
                            Padding="16,10"
                            Margin="0,0,12,0"
                            Style="{StaticResource SecondaryButton}"/>
                    <Button Content="Створити команду" 
                            Command="{Binding CreateTeamCommand}"
                            Padding="18,10"
                            Background="{StaticResource PrimaryBrush}"
                            Foreground="White"
                            BorderThickness="0"
                            FontWeight="SemiBold"
                            FontSize="13"
                            Cursor="Hand"
                            IsEnabled="{Binding IsLoading, Converter={StaticResource InverseBoolConverter}}"
                            Style="{StaticResource ModernButton}"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
