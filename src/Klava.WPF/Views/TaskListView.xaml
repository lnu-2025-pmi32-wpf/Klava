<UserControl x:Class="Klava.WPF.Views.TaskListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="clr-namespace:Klava.WPF.Converters">
    <UserControl.Resources>
        <converters:NullToVisibilityConverter x:Key="NullToVisibility"/>
        <BooleanToVisibilityConverter x:Key="BoolToVisibility"/>
        <converters:TaskDialogTitleConverter x:Key="TaskDialogTitleConverter"/>
        <converters:TaskDialogButtonConverter x:Key="TaskDialogButtonConverter"/>
    </UserControl.Resources>
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="{Binding Subject.Title, StringFormat='Tasks - {0}', FallbackValue='All Tasks'}" 
                       FontSize="24" 
                       FontWeight="Bold"/>
            <TextBlock Text="{Binding Team.Name, StringFormat='Team: {0}'}" 
                       FontSize="14" 
                       Foreground="#757575" 
                       Margin="0,5,0,0"/>
        </StackPanel>

        <!-- Error Message -->
        <Border Grid.Row="1" 
                Background="#FFEBEE" 
                Padding="10" 
                Margin="0,0,0,10"
                Visibility="{Binding ErrorMessage, Converter={StaticResource NullToVisibility}}">
            <TextBlock Text="{Binding ErrorMessage}" 
                       Foreground="#D32F2F" 
                       TextWrapping="Wrap"/>
        </Border>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    Margin="0,0,0,10"
                    Visibility="{Binding IsHeadman, Converter={StaticResource BoolToVisibility}}">
            <Button Content="Create New Task" 
                    Command="{Binding ShowCreateTaskCommand}"
                    Background="#2196F3"
                    Foreground="White"
                    Padding="15,8"
                    FontSize="14"
                    Margin="0,0,10,0"/>
        </StackPanel>

        <!-- Tasks List -->
        <ScrollViewer Grid.Row="3" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Loading Indicator -->
                <StackPanel HorizontalAlignment="Center" 
                            Margin="0,40,0,0"
                            Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibility}}">
                    <ProgressBar IsIndeterminate="True" Width="200" Height="20"/>
                    <TextBlock Text="Loading tasks..." 
                               Margin="0,10,0,0" 
                               HorizontalAlignment="Center"/>
                </StackPanel>

                <!-- To Do Section -->
                <Border Background="#FFF9C4" 
                        BorderBrush="#FFC107" 
                        BorderThickness="2" 
                        Padding="15" 
                        Margin="0,0,0,20"
                        CornerRadius="4">
                    <StackPanel>
                        <TextBlock FontSize="20" 
                                   FontWeight="Bold" 
                                   Margin="0,0,0,15">
                            <Run Text="â° To Do ("/>
                            <Run Text="{Binding TodoTasks.Count, Mode=OneWay}"/>
                            <Run Text=")"/>
                        </TextBlock>

                        <ItemsControl ItemsSource="{Binding TodoTasks}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="White" 
                                            BorderBrush="#E0E0E0" 
                                            BorderThickness="1" 
                                            Padding="15" 
                                            Margin="0,0,0,10"
                                            CornerRadius="4">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <StackPanel Grid.Column="0">
                                                <TextBlock Text="{Binding Name}" 
                                                           FontSize="18" 
                                                           FontWeight="Bold" 
                                                           Margin="0,0,0,5"/>
                                                <TextBlock Text="{Binding Description}" 
                                                           TextWrapping="Wrap" 
                                                           Margin="0,0,0,5"
                                                           Visibility="{Binding Description, Converter={StaticResource NullToVisibility}}"/>
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="ðŸ“š Subject: " 
                                                               FontWeight="Bold" 
                                                               Margin="0,0,5,0"/>
                                                    <TextBlock Text="{Binding SubjectTitle}"/>
                                                </StackPanel>
                                                <StackPanel Orientation="Horizontal" 
                                                            Margin="0,5,0,0"
                                                            Visibility="{Binding Deadline, Converter={StaticResource NullToVisibility}}">
                                                    <TextBlock Text="ðŸ“… Deadline: " 
                                                               FontWeight="Bold" 
                                                               Margin="0,0,5,0"/>
                                                    <TextBlock Text="{Binding Deadline, StringFormat='MMM dd, yyyy HH:mm'}"/>
                                                </StackPanel>
                                            </StackPanel>

                                            <StackPanel Grid.Column="1" 
                                                        Orientation="Vertical" 
                                                        VerticalAlignment="Center">
                                                <Button Content="âœ“ Mark Done" 
                                                        Command="{Binding DataContext.ToggleTaskStatusCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                        CommandParameter="{Binding}"
                                                        Background="#4CAF50"
                                                        Foreground="White"
                                                        Padding="10,5"
                                                        Margin="0,0,0,5"/>
                                                <Button Content="âœ Edit" 
                                                        Command="{Binding DataContext.ShowEditTaskCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                        CommandParameter="{Binding}"
                                                        Background="#FF9800"
                                                        Foreground="White"
                                                        Padding="10,5"
                                                        Margin="0,0,0,5"
                                                        Visibility="{Binding DataContext.IsHeadman, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource BoolToVisibility}}"/>
                                                <Button Content="ðŸ—‘ Delete" 
                                                        Command="{Binding DataContext.DeleteTaskCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                        CommandParameter="{Binding}"
                                                        Background="#F44336"
                                                        Foreground="White"
                                                        Padding="10,5"
                                                        Visibility="{Binding DataContext.IsHeadman, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource BoolToVisibility}}"/>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>

                <!-- Done Section -->
                <Border Background="#C8E6C9" 
                        BorderBrush="#4CAF50" 
                        BorderThickness="2" 
                        Padding="15" 
                        Margin="0,0,0,20"
                        CornerRadius="4">
                    <StackPanel>
                        <TextBlock FontSize="20" 
                                   FontWeight="Bold" 
                                   Margin="0,0,0,15">
                            <Run Text="âœ“ Done ("/>
                            <Run Text="{Binding DoneTasks.Count, Mode=OneWay}"/>
                            <Run Text=")"/>
                        </TextBlock>

                        <ItemsControl ItemsSource="{Binding DoneTasks}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="White" 
                                            BorderBrush="#E0E0E0" 
                                            BorderThickness="1" 
                                            Padding="15" 
                                            Margin="0,0,0,10"
                                            CornerRadius="4"
                                            Opacity="0.8">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <StackPanel Grid.Column="0">
                                                <TextBlock FontSize="18" 
                                                           FontWeight="Bold" 
                                                           Margin="0,0,0,5"
                                                           TextDecorations="Strikethrough"
                                                           Foreground="#757575">
                                                    <Run Text="{Binding Name}"/>
                                                </TextBlock>
                                                <TextBlock Text="{Binding Description}" 
                                                           TextWrapping="Wrap" 
                                                           Margin="0,0,0,5"
                                                           Foreground="#757575"
                                                           Visibility="{Binding Description, Converter={StaticResource NullToVisibility}}"/>
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="ðŸ“š Subject: " 
                                                               FontWeight="Bold" 
                                                               Margin="0,0,5,0"
                                                               Foreground="#757575"/>
                                                    <TextBlock Text="{Binding SubjectTitle}"
                                                               Foreground="#757575"/>
                                                </StackPanel>
                                                <StackPanel Orientation="Horizontal" 
                                                            Margin="0,5,0,0"
                                                            Visibility="{Binding SubmittedAt, Converter={StaticResource NullToVisibility}}">
                                                    <TextBlock Text="âœ“ Completed: " 
                                                               FontWeight="Bold" 
                                                               Margin="0,0,5,0"
                                                               Foreground="#4CAF50"/>
                                                    <TextBlock Text="{Binding SubmittedAt, StringFormat='MMM dd, yyyy HH:mm'}"
                                                               Foreground="#4CAF50"/>
                                                </StackPanel>
                                            </StackPanel>

                                            <StackPanel Grid.Column="1" 
                                                        Orientation="Vertical" 
                                                        VerticalAlignment="Center">
                                                <Button Content="â†¶ Mark Undone" 
                                                        Command="{Binding DataContext.ToggleTaskStatusCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                        CommandParameter="{Binding}"
                                                        Background="#FF9800"
                                                        Foreground="White"
                                                        Padding="10,5"
                                                        Margin="0,0,0,5"/>
                                                <Button Content="âœ Edit" 
                                                        Command="{Binding DataContext.ShowEditTaskCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                        CommandParameter="{Binding}"
                                                        Background="#757575"
                                                        Foreground="White"
                                                        Padding="10,5"
                                                        Margin="0,0,0,5"
                                                        Visibility="{Binding DataContext.IsHeadman, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource BoolToVisibility}}"/>
                                                <Button Content="ðŸ—‘ Delete" 
                                                        Command="{Binding DataContext.DeleteTaskCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                        CommandParameter="{Binding}"
                                                        Background="#F44336"
                                                        Foreground="White"
                                                        Padding="10,5"
                                                        Visibility="{Binding DataContext.IsHeadman, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource BoolToVisibility}}"/>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Bottom Buttons -->
        <StackPanel Grid.Row="4" 
                    Orientation="Horizontal" 
                    Margin="0,20,0,0">
            <Button Content="Back" 
                    Command="{Binding GoBackCommand}"
                    Background="#757575"
                    Foreground="White"
                    Padding="15,8"
                    FontSize="14"/>
        </StackPanel>

        <!-- Create/Edit Task Dialog Overlay -->
        <Border Grid.RowSpan="5" 
                Background="#80000000" 
                Visibility="{Binding ShowCreateDialog, Converter={StaticResource BoolToVisibility}}"
                MouseDown="Overlay_MouseDown">
            <Border Background="White" 
                    Width="500" 
                    Padding="20" 
                    VerticalAlignment="Center"
                    CornerRadius="8">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="20" ShadowDepth="0" Opacity="0.5"/>
                </Border.Effect>
                <StackPanel>
                    <TextBlock Text="{Binding EditingTask, Converter={StaticResource TaskDialogTitleConverter}, FallbackValue='Create New Task'}" 
                               FontSize="18" 
                               FontWeight="Bold" 
                               Margin="0,0,0,15"/>

                    <TextBlock Text="Subject:" Margin="0,0,0,5"/>
                    <ComboBox ItemsSource="{Binding AvailableSubjects}"
                              SelectedValue="{Binding NewTaskSubjectId}"
                              SelectedValuePath="Id"
                              DisplayMemberPath="Title"
                              Padding="8" 
                              Margin="0,0,0,10"/>

                    <TextBlock Text="Task Name:" Margin="0,0,0,5"/>
                    <TextBox Text="{Binding NewTaskName, UpdateSourceTrigger=PropertyChanged}" 
                             Padding="8" 
                             Margin="0,0,0,10"/>

                    <TextBlock Text="Description (optional):" Margin="0,0,0,5"/>
                    <TextBox Text="{Binding NewTaskDescription, UpdateSourceTrigger=PropertyChanged}" 
                             Padding="8" 
                             Height="100" 
                             TextWrapping="Wrap" 
                             AcceptsReturn="True" 
                             Margin="0,0,0,10"/>

                    <TextBlock Text="Deadline (optional):" Margin="0,0,0,5"/>
                    <DatePicker SelectedDate="{Binding NewTaskDeadline}" 
                                Padding="8" 
                                Margin="0,0,0,20"/>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="Cancel" 
                                Command="{Binding CancelTaskDialogCommand}"
                                Background="#757575"
                                Foreground="White"
                                Padding="15,8"
                                Margin="0,0,10,0"/>
                        <Button Content="{Binding EditingTask, Converter={StaticResource TaskDialogButtonConverter}, FallbackValue='Create'}" 
                                Command="{Binding SaveTaskCommand}"
                                Background="#2196F3"
                                Foreground="White"
                                Padding="15,8"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Border>
    </Grid>
</UserControl>
