<UserControl x:Class="Klava.WPF.Views.TaskListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:converters="clr-namespace:Klava.WPF.Converters"
             
             xmlns:views="clr-namespace:Klava.WPF.Views.Controls"
             xmlns:controls="clr-namespace:Klava.WPF.Controls"

             mc:Ignorable="d"
             d:DesignHeight="700" d:DesignWidth="1000">

    <UserControl.Resources>
        <converters:NullToVisibilityConverter x:Key="NullToVisibility"/>
        <BooleanToVisibilityConverter x:Key="BoolToVisibility"/>
        <converters:TaskDialogTitleConverter x:Key="TaskDialogTitleConverter"/>
        <converters:TaskDialogButtonConverter x:Key="TaskDialogButtonConverter"/>
        </UserControl.Resources>
    
    <Grid Margin="20" Background="#FAFAFA">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="320"/> 
            <ColumnDefinition Width="*"/>   
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" Margin="0,0,20,0">
            <TextBlock Text="{Binding Subject.Title, FallbackValue='All Tasks'}" 
                       FontSize="24" FontWeight="Bold" Foreground="#333" TextWrapping="Wrap"/>
            
            <TextBlock Text="{Binding Team.Name, StringFormat='Team: {0}'}" 
                       FontSize="14" Foreground="#757575" Margin="0,5,0,25"/>

            <StackPanel Orientation="Vertical" Margin="0,0,0,25">
                <Button Content="+ Create New Task" 
                        Command="{Binding ShowCreateTaskCommand}"
                        Background="#2196F3" Foreground="White" Padding="10" FontSize="14" BorderThickness="0"
                        Visibility="{Binding IsHeadman, Converter={StaticResource BoolToVisibility}}"
                        HorizontalContentAlignment="Left">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="8"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </StackPanel>

            <views:CalendarWidget Deadlines="{Binding Deadlines}" Margin="0,0,0,20"/>

            <Button Content="â† Back to Subjects" 
                    Command="{Binding GoBackCommand}"
                    Background="Transparent" Foreground="#757575" BorderThickness="0"
                    HorizontalAlignment="Left" Margin="0,40,0,0" FontSize="14"/>
        </StackPanel>


        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" Background="#FFEBEE" Padding="15" Margin="0,0,0,20" CornerRadius="8"
                    Visibility="{Binding ErrorMessage, Converter={StaticResource NullToVisibility}}">
                <TextBlock Text="{Binding ErrorMessage}" Foreground="#D32F2F" TextWrapping="Wrap"/>
            </Border>

            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="0,0,10,0">
                <StackPanel>
                    <TextBlock FontSize="18" FontWeight="SemiBold" Margin="0,0,0,15" Foreground="#333">
                        <Run Text="To Do ("/><Run Text="{Binding TodoTasks.Count, Mode=OneWay}"/><Run Text=")"/>
                    </TextBlock>

                    <ItemsControl ItemsSource="{Binding TodoTasks}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="White" Margin="0,0,0,15" Padding="20" CornerRadius="10">
                                    <Border.Effect>
                                        <DropShadowEffect BlurRadius="10" Color="#EEE" ShadowDepth="2" Direction="270" Opacity="0.5"/>
                                    </Border.Effect>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="0">
                                            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                                <Border Background="#E3F2FD" 
                                                        Visibility="{Binding Deadline, Converter={StaticResource NullToVisibility}}"
                                                        CornerRadius="4" Padding="8,3" Margin="0,0,10,0" VerticalAlignment="Center">
                                                    <TextBlock Text="{Binding Deadline, StringFormat='MMM dd, HH:mm'}" Foreground="#1565C0" FontWeight="Bold" FontSize="11"/>
                                                </Border>
                                                <TextBlock Text="{Binding SubjectTitle}" Foreground="#9E9E9E" FontSize="12" VerticalAlignment="Center" FontWeight="SemiBold"/>
                                            </StackPanel>
                                            <TextBlock Text="{Binding Name}" FontSize="16" FontWeight="Bold" Margin="0,0,0,5" TextWrapping="Wrap" Foreground="#333"/>
                                            <TextBlock Text="{Binding Description}" TextWrapping="Wrap" Foreground="#616161" FontSize="14"
                                                       Visibility="{Binding Description, Converter={StaticResource NullToVisibility}}"/>
                                        </StackPanel>

                                        <StackPanel Grid.Column="1" VerticalAlignment="Top" Orientation="Horizontal">
                                            <Button Command="{Binding DataContext.ToggleTaskStatusCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    CommandParameter="{Binding}"
                                                    ToolTip="Mark as Done" Background="Transparent" BorderThickness="0" Padding="5" Margin="0,0,5,0">
                                                <TextBlock Text="âœ“" FontSize="18" Foreground="#4CAF50" FontWeight="Bold"/>
                                            </Button>
                                            <StackPanel Orientation="Horizontal" Visibility="{Binding DataContext.IsHeadman, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource BoolToVisibility}}">
                                                <Button Command="{Binding DataContext.ShowEditTaskCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                        CommandParameter="{Binding}" ToolTip="Edit" Background="Transparent" BorderThickness="0" Padding="5">
                                                    <TextBlock Text="âœŽ" FontSize="16" Foreground="#FF9800"/>
                                                </Button>
                                                <Button Command="{Binding DataContext.DeleteTaskCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                        CommandParameter="{Binding}" ToolTip="Delete" Background="Transparent" BorderThickness="0" Padding="5">
                                                    <TextBlock Text="ðŸ—‘" FontSize="16" Foreground="#F44336"/>
                                                </Button>
                                            </StackPanel>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <TextBlock FontSize="18" FontWeight="SemiBold" Margin="0,30,0,15" Foreground="#333" Opacity="0.6">
                        <Run Text="Completed ("/><Run Text="{Binding DoneTasks.Count, Mode=OneWay}"/><Run Text=")"/>
                    </TextBlock>
                    
                    <ItemsControl ItemsSource="{Binding DoneTasks}" Opacity="0.6">
                         <ItemsControl.ItemTemplate>
                             <DataTemplate>
                                 <Border Background="#F5F5F5" Margin="0,0,0,10" Padding="15" CornerRadius="8">
                                     <Grid>
                                         <Grid.ColumnDefinitions>
                                             <ColumnDefinition Width="*"/>
                                             <ColumnDefinition Width="Auto"/>
                                         </Grid.ColumnDefinitions>
                                         <StackPanel Grid.Column="0">
                                             <TextBlock Text="{Binding Name}" TextDecorations="Strikethrough" FontWeight="Medium" Foreground="#666"/>
                                             <TextBlock Text="{Binding SubmittedAt, StringFormat='Done: MMM dd'}" FontSize="11" Foreground="#999" Margin="0,2,0,0"/>
                                         </StackPanel>
                                         <Button Grid.Column="1" Content="â†¶" Command="{Binding DataContext.ToggleTaskStatusCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                 CommandParameter="{Binding}" Background="Transparent" BorderThickness="0" FontWeight="Bold" FontSize="16" Foreground="#FF9800"/>
                                     </Grid>
                                 </Border>
                             </DataTemplate>
                         </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </ScrollViewer>
        </Grid>

        <Border Grid.ColumnSpan="2" Background="#80000000" Visibility="{Binding ShowCreateDialog, Converter={StaticResource BoolToVisibility}}" MouseDown="Overlay_MouseDown">
            <Border Background="White" Width="500" Padding="30" VerticalAlignment="Center" CornerRadius="16">
                <Border.Effect><DropShadowEffect BlurRadius="20" ShadowDepth="0" Opacity="0.4"/></Border.Effect>
                <StackPanel>
                    <TextBlock Text="{Binding EditingTask, Converter={StaticResource TaskDialogTitleConverter}, FallbackValue='Create New Task'}" FontSize="22" FontWeight="Bold" Margin="0,0,0,20"/>
                    <TextBlock Text="Subject" Foreground="#666" Margin="0,0,0,5"/>
                    <ComboBox ItemsSource="{Binding AvailableSubjects}" SelectedValue="{Binding NewTaskSubjectId}" SelectedValuePath="Id" DisplayMemberPath="Title" Padding="10" Margin="0,0,0,15"/>
                    <TextBlock Text="Task Name" Foreground="#666" Margin="0,0,0,5"/>
                    <TextBox Text="{Binding NewTaskName, UpdateSourceTrigger=PropertyChanged}" Padding="10" Margin="0,0,0,15"/>
                    <TextBlock Text="Description" Foreground="#666" Margin="0,0,0,5"/>
                    <TextBox Text="{Binding NewTaskDescription, UpdateSourceTrigger=PropertyChanged}" Padding="10" Height="80" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" Margin="0,0,0,15"/>
                    <TextBlock Text="Deadline" Foreground="#666" Margin="0,0,0,5"/>
                    <DatePicker SelectedDate="{Binding NewTaskDeadline}" Padding="10" Margin="0,0,0,25" HorizontalAlignment="Stretch"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="Cancel" Command="{Binding CancelTaskDialogCommand}" Background="Transparent" Foreground="#666" Padding="15,10" Margin="0,0,10,0" BorderThickness="0"/>
                        <Button Content="{Binding EditingTask, Converter={StaticResource TaskDialogButtonConverter}, FallbackValue='Create'}" Command="{Binding SaveTaskCommand}" Background="#2196F3" Foreground="White" Padding="25,10" BorderThickness="0" FontWeight="SemiBold">
                            <Button.Resources><Style TargetType="Border"><Setter Property="CornerRadius" Value="6"/></Style></Button.Resources>
                        </Button>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Border>

        <controls:LoadingOverlay Grid.ColumnSpan="2" IsVisible="{Binding IsLoading}" />
    </Grid>
</UserControl>