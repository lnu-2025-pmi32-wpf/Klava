<UserControl x:Class="Klava.WPF.Views.RegisterView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="clr-namespace:Klava.WPF.Controls"
             Background="{StaticResource BackgroundBrush}">

    <controls:AuthLayout Title="Створити акаунт" 
                         Subtitle="Приєднайтесь до спільноти"
                         IsLoading="{Binding IsLoading}">

        <StackPanel>
            <controls:LabeledTextBox Label="Ім'я" Text="{Binding Firstname}" />
            <controls:LabeledTextBox Label="Прізвище" Text="{Binding Lastname}" />
            
            <controls:BindablePasswordBox Label="Пароль" Password="{Binding Password}" />
            
            <TextBlock Text="Мінімум 6 символів" FontSize="11" 
                       Foreground="{StaticResource TextSecondaryBrush}" Margin="0,-12,0,20"/>

            <Border Background="#FFEBEE" CornerRadius="6" Padding="12" Margin="0,0,0,20"
                    Visibility="{Binding ErrorMessage, Converter={StaticResource NullToVisibilityConverter}}">
                <TextBlock Text="{Binding ErrorMessage}" Foreground="#C62828" TextWrapping="Wrap" FontSize="12"/>
            </Border>

            <Button Content="Створити акаунт" Command="{Binding RegisterCommand}"
                    Style="{StaticResource PrimaryButton}" Background="{StaticResource SuccessBrush}"
                    Height="44" Margin="0,0,0,16"
                    IsEnabled="{Binding IsLoading, Converter={StaticResource InverseBoolConverter}}"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Text="Уже маєте акаунт? " Foreground="{StaticResource TextSecondaryBrush}" FontSize="13"/>
                <Button Content="Увійти" Command="{Binding NavigateToLoginCommand}"
                        Style="{StaticResource LinkButton}"/>
            </StackPanel>
        </StackPanel>

    </controls:AuthLayout>
</UserControl>