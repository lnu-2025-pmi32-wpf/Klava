<UserControl x:Class="Klava.WPF.Views.RegisterView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Klava.WPF.Views"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="900"
             MinWidth="520" MinHeight="420"
             Background="{StaticResource BackgroundBrush}">
    <Grid>
        <Border MaxWidth="420" 
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                Background="{StaticResource SurfaceBrush}"
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="1"
                CornerRadius="12"
                Padding="40">
            <Border.Effect>
                <DropShadowEffect BlurRadius="15" 
                                  ShadowDepth="3" 
                                  Opacity="0.15" 
                                  Color="Black"/>
            </Border.Effect>
            
            <StackPanel>
                <!-- Header -->
                <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Margin="0,0,0,20">
                    <TextBlock Text="Створити акаунт" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               Foreground="{StaticResource TextPrimaryBrush}"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="Приєднайтесь до спільноти" 
                               FontSize="13" 
                               Foreground="{StaticResource TextSecondaryBrush}"
                               HorizontalAlignment="Center"
                               Margin="0,6,0,0"/>
                </StackPanel>

                <!-- First Name -->
                <TextBlock Text="Ім'я" 
                           Margin="0,0,0,8"
                           Foreground="{StaticResource TextPrimaryBrush}"
                           FontWeight="SemiBold"
                           FontSize="12"/>
                <TextBox Text="{Binding Firstname, UpdateSourceTrigger=PropertyChanged}" 
                         Style="{StaticResource ModernTextBox}"
                         Margin="0,0,0,16"
                         Foreground="{StaticResource TextPrimaryBrush}"/>

                <!-- Last Name -->
                <TextBlock Text="Прізвище" 
                           Margin="0,0,0,8"
                           Foreground="{StaticResource TextPrimaryBrush}"
                           FontWeight="SemiBold"
                           FontSize="12"/>
                <TextBox Text="{Binding Lastname, UpdateSourceTrigger=PropertyChanged}" 
                         Style="{StaticResource ModernTextBox}"
                         Margin="0,0,0,16"
                         Foreground="{StaticResource TextPrimaryBrush}"/>

                <!-- Password -->
                <TextBlock Text="Пароль" 
                           Margin="0,0,0,8"
                           Foreground="{StaticResource TextPrimaryBrush}"
                           FontWeight="SemiBold"
                           FontSize="12"/>
                <PasswordBox x:Name="PasswordBox" 
                             Style="{StaticResource ModernPasswordBox}"
                             Margin="0,0,0,4"
                             PasswordChanged="PasswordBox_PasswordChanged"/>
                
                <TextBlock Text="Мінімум 6 символів" 
                           FontSize="11" 
                           Foreground="{StaticResource TextSecondaryBrush}"
                           Margin="0,0,0,20"/>

                <!-- Error Message -->
                <Border Background="#FFEBEE" 
                        CornerRadius="6"
                        Padding="12"
                        Margin="0,0,0,20"
                        Visibility="{Binding ErrorMessage, Converter={StaticResource NullToVisibilityConverter}}">
                    <TextBlock Text="{Binding ErrorMessage}" 
                               Foreground="#C62828" 
                               TextWrapping="Wrap"
                               FontSize="12"/>
                </Border>

                <!-- Register Button -->
                <Button Content="Створити акаунт" 
                        Command="{Binding RegisterCommand}"
                        Height="44"
                        FontSize="15"
                        FontWeight="SemiBold"
                        Style="{StaticResource PrimaryButton}"
                        Background="{StaticResource SuccessBrush}"
                        Foreground="White"
                        Margin="0,0,0,16"
                        Cursor="Hand"
                        IsEnabled="{Binding IsLoading, Converter={StaticResource InverseBoolConverter}}"/>

                <!-- Loading Indicator -->
                <TextBlock Text="Створення акаунту..." 
                           FontSize="14"
                           Foreground="{StaticResource TextSecondaryBrush}"
                           HorizontalAlignment="Center"
                           Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}"
                           Margin="0,0,0,16"/>

                <!-- Login Link -->
                <StackPanel Orientation="Horizontal" 
                            HorizontalAlignment="Center">
                    <TextBlock Text="Уже маєте акаунт? " 
                               Foreground="{StaticResource TextSecondaryBrush}"
                               FontSize="13"/>
                    <Button Content="Увійти" 
                            Command="{Binding NavigateToLoginCommand}"
                            Background="Transparent"
                            Foreground="{StaticResource PrimaryBrush}"
                            BorderThickness="0"
                            FontSize="13"
                            FontWeight="SemiBold"
                            Cursor="Hand"
                            Padding="2,0"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
