<Window x:Class="Klava.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Klava.WPF"
        xmlns:vm="clr-namespace:Klava.WPF.ViewModels"
        xmlns:views="clr-namespace:Klava.WPF.Views"
        xmlns:converters="clr-namespace:Klava.WPF.Converters"
        mc:Ignorable="d"
        Title="Klava - Student Task Management" Height="720" Width="1200" MinWidth="900" MinHeight="600"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource BackgroundBrush}"
        TextOptions.TextFormattingMode="Display">
    
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <converters:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
        <converters:InverseBoolConverter x:Key="InverseBoolConverter"/>
        
        <DataTemplate DataType="{x:Type vm:LoginViewModel}">
            <views:LoginView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:RegisterViewModel}">
            <views:RegisterView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:TeamListViewModel}">
            <views:TeamListView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:CreateTeamViewModel}">
            <views:CreateTeamView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:TeamDashboardViewModel}">
            <views:TeamDashboardView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:ManageMembersViewModel}">
            <views:ManageMembersView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:SubjectListViewModel}">
            <views:SubjectListView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:SubjectDetailsViewModel}">
            <views:SubjectDetailsView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:TaskListViewModel}">
            <views:TaskListView />
        </DataTemplate>
    </Window.Resources>
    
    <Grid Background="{StaticResource BackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header with Gradient -->
        <Border Grid.Row="0" CornerRadius="0,0,8,8">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                    <GradientStop Color="{StaticResource PrimaryColor}" Offset="0"/>
                    <GradientStop Color="{StaticResource PrimaryDarkColor}" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Logo and Title -->
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Grid.Column="0" Margin="24,16,0,16">
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="Klava" FontSize="26" FontWeight="Bold" Foreground="White"/>
                        <TextBlock Text="Task Management System" FontSize="12" Foreground="#E8EAF6" Opacity="0.8" Margin="0,2,0,0"/>
                    </StackPanel>
                </StackPanel>

                <!-- User Info -->
                <StackPanel Orientation="Horizontal" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,16,24,16">
                    <TextBlock Text="{Binding CurrentUserName}" Foreground="White" FontSize="14" FontWeight="SemiBold" VerticalAlignment="Center" Margin="0,0,12,0"/>
                    <Border Width="12" Height="12" Background="#4CAF50" CornerRadius="6" VerticalAlignment="Center" Visibility="{Binding IsAuthenticated, Converter={StaticResource BoolToVisibilityConverter}}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Content Area -->
        <ContentControl Grid.Row="1" Content="{Binding CurrentViewModel}"/>

        <!-- Footer -->
        <Border Grid.Row="2" Background="White" BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,1,0,0">
            <Grid Margin="24,12,24,12">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="© 2025 Klava - Student Task Management System" FontSize="12" Foreground="{StaticResource TextSecondaryBrush}" Grid.Column="0"/>
                <TextBlock Text="Phase 1: Infrastructure and Basic Auth" FontSize="11" Foreground="#BDBDBD" Grid.Column="1"/>
            </Grid>
        </Border>
    </Grid>
</Window>
